%% Modified list environments (redefine itemize and create Enumerate)

% first (optional) arg of itemize is item tag
\renewenvironment{itemize}[1][$\bullet$~]{
\begin{list}{#1}{
\setlength{\topsep}{-0.2ex}
\setlength{\itemsep}{-0.1ex}      % for vertical spacing in lists
\setlength{\parsep}{0.2ex}
\setlength{\leftmargin}{1.7em}
\setlength{\labelwidth}{1.3em}
}
}{
\end{list}
}

% first (optional) argument of Enumerate is the tag type:
% must use the form \protect\TYPE{MYCOUNTER}, where TYPE is one of roman,
% alph, etc.
% Enumerate environments CANNOT BE NESTED
\newcounter{MYCOUNTER}
\newenvironment{Enumerate}[1][\protect\arabic{MYCOUNTER}.~]{
\begin{list}{#1}{
\setlength{\topsep}{-0.2ex}
\setlength{\itemsep}{-0.1ex}      % for vertical spacing in lists
\setlength{\parsep}{0.2ex}
\usecounter{MYCOUNTER}
}
}{
\end{list}
}



